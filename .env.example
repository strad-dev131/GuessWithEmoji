# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=YourBotUsername
OWNER_ID=your_telegram_user_id

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=emoji_movie_bot

# Game Settings
GAME_TIMEOUT=60
MAX_HINTS=3
POINTS_CORRECT=10
POINTS_HINT=5

# Rate Limiting
GLOBAL_RATE_LIMIT=25
GROUP_RATE_LIMIT=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Deployment (Heroku)
PORT=8000
WEBHOOK_URL=https://your-app.herokuapp.com
USE_WEBHOOK=false

# Error Reporting
ERROR_CHAT_ID=your_telegram_user_id
